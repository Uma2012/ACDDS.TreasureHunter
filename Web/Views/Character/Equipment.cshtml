@model IEnumerable<Web.Models.EquipmentResponse>

@{
    ViewData["Title"] = "Equipment";
}

<h1>Equipment Store</h1>


<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HpModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuckModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>

            <th></th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HpModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuckModifier)
            </td>
            <td>
                <b> @Html.DisplayFor(modelItem => item.Value)</b>
            </td>
            <td>                
                <input type="button" value="Buy"class="btn btn-info" onclick="location.href='@Url.Action("Purchase","Character",new { equipmentId=@item.Id})'" />
            </td>
        </tr>
}
    </tbody>
</table>
